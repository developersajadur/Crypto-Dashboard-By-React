{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".", 
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "/dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
